# Services
# First level array represent a group.
# Leave only a "items" key if not using group (group name, icon & tagstyle are optional, section separation will not be displayed).
services:
  - name: "Media"
    icon: "fas fa-play"
    items:
{% for container in containers %}
{% if container.ports is defined and container.homer_category is defined and container.homer_category == "media" %}
      - name: {{ container.name }}
        logo: "assets/tools/homer-icons/png/{{ container.homer_icon }}.png"
        url: "http://{{ ansible_host }}:{{ container.ports.0.split(":").0 }}"
{% endif %}
{% endfor %}
      - name: "GoPlay"
        logo: "assets/tools/homer-icons/png/emby.png"
        url: "https://goplay.ml/"
      - name: "YouTube"
        logo: "assets/tools/homer-icons/png/youtube.png"
        url: "https://www.youtube.com/feed/subscriptions"
      - name: "Twitch"
        logo: "assets/tools/homer-icons/png/peertube.png"
        url: "https://www.twitch.tv/directory/following"
  - name: Server
    icon: "fas fa-server"
    items:
{% for container in containers %}
{% if container.ports is defined and container.homer_category is defined and container.homer_category == "server" %}
      - name: {{ container.name }}
        logo: "assets/tools/homer-icons/png/{{ container.homer_icon }}.png"
        url: "http://{{ ansible_host }}:{{ container.ports.0.split(":").0 }}"
{% endif %}
{% endfor %}
      - name: "Proxmox"
        logo: "assets/tools/homer-icons/png/proxmox.png"
        url: "https://192.168.13.200:8006"
      - name: "Synology"
        logo: "assets/tools/homer-icons/png/synology.png"
        url: "http://192.168.13.11:5000"
      - name: "pfSense"
        logo: "assets/tools/homer-icons/png/pfsense.png"
        url: "https://192.168.13.1:10443/"
  - name: Download Clients
    icon: "fas fa-cloud-download-alt"
